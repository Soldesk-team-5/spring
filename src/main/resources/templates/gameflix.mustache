<!doctype html>
<html lang="en">
<head>
    <title style="display: none;">GAMEFLIX</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="css/gameflix.css">
    <link rel="stylesheet" href="css/modal.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/all.css">
</head>
<body>
{{>layout/header}}
    <div class="content">

        {{#noBasket}}
            <div class="wrapper">
                <div class="error">{{noBasket}}</div>
            </div>
        {{/noBasket}}

        {{#calculating}}
            <div class="wrapper">
                <div class="error">{{calculating}}</div>
            </div>
        {{/calculating}}

        {{#firstTag}}
            <div class="inner">
                <span class="tag"><h2>{{firstTag}}</h2></span>
                <div class="games" id="gamesContainer">
                    {{#firstTagGames}}
                        <div class="game">
                            <a href="/showgame?name={{.}}" class="modalLink"><img src="/img/{{.}}.jpg"></a>
                        </div>
                    {{/firstTagGames}}
                </div>
                <button id="carouselLeft" class="leftBtn">◀</button>
                <button id="carouselRight" class="rightBtn">▶</button>
            </div>
        {{/firstTag}}

        {{#secondTag}}
