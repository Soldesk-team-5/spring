<!doctype html>
<html lang="en">
<head>
    <title style="display: none;">GAMEFLIX</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="css/userinfo.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/all.css">
</head>
<body>
{{>layout/header}}
<div class="content">
    <div class="userForm">
        <div class="userInfo">
            <div>
                <div class="info_inner">
                    <h3>아이디</h3>
                    <input type="text" placeholder={{userId}} class="info_input" readonly/>
                </div>
                <div class="info_inner">
                    <h3>닉네임</h3>
                    <input type="text" placeholder={{nickname}} class="info_input" readonly/>
                </div>
            </div>
        </div>

        <div class="updateInfo">
            <form action="/updateInfo" method="post" onsubmit="return validateForm()">
                <div class="info_inner">
                    <h3>닉네임 변경</h3>
                    <input type="text" name="changedNickname" id="changedNickname" placeholder="변경할 닉네임" class="info_input" onkeyup="validateNickname()"/>
                    {{#valid_nickname}}<span class="valid">{{valid_nickname}}</span>{{/valid_nickname}}
                </div>
                <div class="info_inner">
                    <h3>비밀번호 변경</h3>
                    <input type="password" name="changedPassword" id="changedPassword" placeholder="변경할 비밀번호" class="info_input" onkeyup="validatePassword()"/>
                </div>
                <button type="submit" class="submit">정보 수정</button>
            </form>
        </div>

        <div class="deleteInfo">
            <div class="info_inner">
                <form action="/deleteInfo" method="post">
                    <h3>회원 삭제</h3>
                    <input type="password" name="checkPassword" placeholder="삭제하시려면 비밀번호를 입력해주세요" class="info_input"/>
                    {{#notEqual}}<span class="valid">{{notEqual}}</span>{{/notEqual}}
                    <button type="submit" class="submit">회원 탈퇴</button>
                </form>
            </div>
        </div>
    </div>
</div>


{{>layout/footer}}
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/x-mustache" src=/js/userInfo.js"></script>
</body>
</html>